<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<%= render 'users/profile', user: @user %>

<h2>New animal</h2>
<%= render 'animals/newform', animal: @animal %>
</div>
<div class="col-xs-9">
<h2>animals</h2>
<!--animals一覧 -->
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @animals.each do |animal| %>
		<tr>
			<td>
				<%= link_to (animal.user) do %>
				<%= attachment_image_tag(animal.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
				<% end %>
			</td>
			<td><%= link_to animal.name,animal_path(animal.id) %></td>
			<td><%= animal.body %></td>
		</tr>
		<% end %>
	</tbody>
</table>
<!--animals一覧 -->
</div>
</div>
