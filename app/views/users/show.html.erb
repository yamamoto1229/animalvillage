<div class="row">

	<div class="col-lg-9" style="background-color: orange;">
	<h2>クリップ一覧</h2>
	</div>

	<div class="col-xs-3">	
		<%= render 'users/profile', user: current_user %>
	</div>
	<div class="col-xs-9">
		<%= render 'clips/list', clips: @clips %>
	</div>
</div>
<div class="row">
	<div class="col-xs-12">
		<h2>掲載保護動物一覧</h2>
		<!--animals一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>写真</th>
					<th>名前</th>
					<th>詳細</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @animals.each do |animal| %>
				<tr>
					<td>
						<%= link_to users_path(animal.user_id) do %>
						<%= attachment_image_tag animal, :image, fallback: "no-image-mini.jpg" %></td>
						<% end %>
					</td>
					<td><%= link_to animal.name,animal_path(animal.id) %></td>
					<td><%= animal.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--animals一覧 -->
	</div>
</div>


