<div class="row">
	<div class="col-xs-12">
	<h2>保護動物一覧</h2>
	<!--users一覧 -->
	<table class="table">
		<thead>
			<tr>
				<th>トップ画面</th>
				<th>お名前</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
				<td><%= user.name%></td>
				<td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<!--users一覧 -->
	</div>
</div>