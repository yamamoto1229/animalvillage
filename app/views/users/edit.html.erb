<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div class="row">
          <div class="col-md-6 col-md-offset-3 user_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>会員情報変更画面</span>
              </h3>
            </div>
				<%= form_for(@user) do |f| %>

				<!-- エラーメッセージ表示-->
				<% if @user.errors.any? %>
					<h3><%= @user.errors.count %>error occurrence</h3><!--エラーメッセ-->
					<ul>
						<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
				<!-- エラーメッセージ表示-->

				<div class="row">

					<div class="field">
						<%= f.label :会員名 %>
						<%= f.text_field :name, class: "user_name" %>
					</div>

					<div class="field">
						<%= f.label :トップ画面 %>
						<%= f.attachment_field :profile_image, class: "user_image" %>
					</div>

					<div class="field">
						<%= f.label :内容 %>
						<%= f.text_area :introduction, class: "introduction" %>
					</div>

					<div class="actions">
						<%= f.submit class: "btn btn-primary col-xs-12"%>
					</div>
			    </div>

				<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>